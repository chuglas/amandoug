<%- include('../partials/header') %>


<div class="page-margin--top">
  <div class="profile-header">
    <h1><%= user.username %></h1>
    <% if( sameUser ) { %>
      <div class="btn-edit">
        <a href="/<%= user.username %>/events/new-event">Add New Event</a>
      </div>
    <% } %>
  </div>

  <% user.userEvents.forEach((oneEvent) => { %>
    <a class="event-box" href='/<%= user.username %>/events/<%= oneEvent._id %>'>
      <h3><%= oneEvent.name %></h3>
      <p><%= oneEvent.description %></p>
    </a>
  <% }) %>

</div>
